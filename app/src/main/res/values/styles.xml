<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FirstTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorAccent">#f44</item>
        <item name="android:textColor">#222</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="StartTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:foreground">@drawable/ic_launcher_foreground</item>
        <item name="android:foregroundTint">#808080</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:foregroundTintMode">screen</item>
    </style>

</resources>
